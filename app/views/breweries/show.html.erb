<%- model_class = Brewery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hours) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.hours %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:monday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.monday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tuesday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.tuesday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wednesday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.wednesday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:thursday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.thursday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:friday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.friday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:saturday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.saturday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sunday) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.sunday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:neighborhood) %></dt>
      <dd><pre class="prettyprint"><%= @brewery.neighborhood %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              breweries_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_brewery_path(@brewery), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              brewery_path(@brewery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>